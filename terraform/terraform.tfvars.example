# Example Terraform variables file
# Copy this to terraform.tfvars and adjust as needed

# Deployment target: "aws" for AWS Learner Lab, "localstack" for LocalStack
deployment_target = "aws"

# LocalStack endpoint (only used when deployment_target = "localstack")
localstack_endpoint = "http://localhost:4566"

# AWS Region
aws_region = "us-west-2"

# ECR Repository name
ecr_repository_name = "ecr_service"

# Service name
service_name = "CS6650L2"

# Container port
container_port = 8080

# Number of ECS tasks to run
ecs_count = 1

# CloudWatch log retention (days)
log_retention_days = 7

